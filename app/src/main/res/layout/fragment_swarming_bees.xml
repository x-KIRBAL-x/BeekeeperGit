<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="swarmingBeesViewModel"
            type="com.example.android.myapplication.swarmingbees.SwarmingBeesViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".beegroups.BeeGroupsFragment">

        <Button
            android:id="@+id/swarming_bees_info"
            android:layout_width="@dimen/info_button_width"
            android:layout_height="wrap_content"
            android:text="\?"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/margin_end"
            android:onClick="@{()->swarmingBeesViewModel.clickOnInfoButton()}"
            app:layout_constraintBottom_toTopOf="@id/swarming_bees_list"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/swarming_bees_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/close"
            app:layout_constraintTop_toBottomOf="@+id/swarming_bees_info"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:onClick="@{()->swarmingBeesViewModel.clickOnCloseButton()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/swarming_bees_list"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>