<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyBeekeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/yellow_300</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_700</item>
        <item name="colorSecondaryVariant">@color/orange_900</item>
        <item name="colorOnSecondary">@color/dark_red_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/brown</item>
    </style>
</resources>